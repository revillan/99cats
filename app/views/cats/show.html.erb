<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= @cat.name %></h1>
<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Color
    </th>
    <th>
      Age
    </th>
    <th>
      Sex
    </th>
    <th>
      Description
    </th>
  </tr>
  <tr>
    <td>
      <%= @cat.name %>
    </td>
    <td>
      <%= @cat.color %>
    </td>
    <td>
      <%= @cat.age %>
    </td>
    <td>
      <%= @cat.sex %>
    </td>
    <td>
      <%= @cat.description %>
    </td>
  </tr>
</table>

<h2>Rentals</h2>
<table>
  <tr>
    <th>
      Start Date
    </th>
    <th>
      End Date
    </th>
    <th>
      Status
    </th>
  </tr>
  <% @cat.cat_rentals.order(:start_date).each do |rental| %>
  <tr>
    <td>
      <%= rental.start_date %>
    </td>
    <td>
      <%= rental.end_date %>
    </td>
    <td>
      <%= rental.status %>
    </td>
  </tr>
  <% end %>
</table>
